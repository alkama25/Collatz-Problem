//At the end we will print the length of the sequence
unsigned index = 1, max = 1;
	for (unsigned i = 1; i <= N; i++) {
		if (length[i] > max) {
			max = length[i];
			index = i;
		}
		printf("%d ", length[i]);
	}
  // Print length of max sequence, the longest sequence is to be printed
	printf("\n\nThe max sequence length is %d and is of number %d", max, index);

	return 0;
}
